{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "declaration": true,
    "rootDir": "src",
    "outDir": "lib"
  },
  "exclude": [
    "node_modules",
    "samples",
    "lib"
  ]
}
